<div class="flickr">

  <% photos.to_a.in_groups_of(2) do |photo| %>
      <ul>

        <li>
          <% photo.each do |p| %>
              <% info = flickr.photos.getInfo(:photo_id => p.id) %>
              <%= link_to(image_tag(FlickRaw.url_b(info), class: "flickr_photo", title: p.title), FlickRaw.url_photopage(info)) %>
          <% end %>
        </li>

  <% end %>
  </ul>

</div>